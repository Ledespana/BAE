<% if @bots_interaction.persisted? %>
  var addSentence = document.querySelectorAll("#addSentence");
  var deleteSentence = document.querySelectorAll("#deleteSentence");

  if ( $('#sentences').css('hidden') != 'none' ){
    addSentence[0].classList.add("hidden");
    deleteSentence[0].classList.remove("hidden");
  };
<% else %>
  alert("Something went wrong");
<% end %>
