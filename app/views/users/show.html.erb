<br>
<div class="row text-center">
  <div class="panel large-4 columns">
    <h1><%= @user.username %></h1>
  </div>
  <div class="large-8 columns">
    <ul>
      <% if !@user.description.empty? %>
        <li><%= @user.description %></li>
      <% end %>
      <li>Gender: <%= @user.gender %></li>
      <li>Number of BAEs: <%= @user.bots.count %></li>
      <li>Vocabulary:</li>
    </ul>
    <div class="large-8 columns">
      <h3>List of BAEs</h3>
      <ul>
        <% @user.bots.each do |bot| %>
          <li><%= image_tag(bot.avatar) %></li>
          <li> <%= bot.name %> <li>
            <%= link_to 'See', user_bot_path(@user, bot), class: 'button small' %>
          <% end %>
      </ul>
    </div>
  </div>
</div>
