<ul>
  <% @bots.each do |bot| %>
    <div class='bot'>
      <li><%= image_tag(bot.avatar) %></li>
      <li><%= link_to bot.name, user_bot_path(@user, bot) %></li>
      <li><%= link_to 'Edit', edit_bot_path( bot), class: 'button small' %></li>
      <li><%= button_to 'Delete', user_bot_path(@user, bot), data: { confirm: "Are you sure?" }, method: :delete, class: 'button small' %></li>
    </div>
  <% end %>
</ul>
